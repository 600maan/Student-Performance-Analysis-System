@model SPMS.Models.RegisterAndAssignRoles

@{
    ViewBag.Title = "RegisterAndAssignRoles";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>RegisterAndAssignRoles</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>RegisterAndAssignRoles</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.UserName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserName)
                @Html.ValidationMessageFor(model => model.UserName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SchoolRolesId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{ List<SelectListItem> subClass = new List<SelectListItem>();
                 subClass.Add(new SelectListItem { Text = "Admin", Value = "1" });
                 subClass.Add(new SelectListItem { Text = "Teacher", Value = "2" });
                 subClass.Add(new SelectListItem { Text = "ClassTeacher", Value = "3" });
                }

                @Html.DropDownListFor(model => model.SchoolRolesId, new SelectList(subClass, "Value", "Text", "Select one"))


                @Html.ValidationMessageFor(model => model.SchoolRolesId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
            

                @Html.EditorFor(model => model.Password)
                @Html.ValidationMessageFor(model => model.Password)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ConfirmPassword, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ConfirmPassword)
                @Html.ValidationMessageFor(model => model.ConfirmPassword)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
