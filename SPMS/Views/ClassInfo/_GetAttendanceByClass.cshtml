            @Html.DisplayFor(modelItem => item.Rollno)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AttdStatus)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AttendanceId }) |
