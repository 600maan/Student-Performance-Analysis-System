@model SPMS.Models.Feedback

@{
    ViewBag.Title = "Feedback";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Feedback</legend>

                <div class="editor-label">
            @Html.LabelFor(model => model.senderName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.senderName)
            @Html.ValidationMessageFor(model => model.senderName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.message)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.message)
            @Html.ValidationMessageFor(model => model.message)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.fdbkTo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.fdbkTo)
            @Html.ValidationMessageFor(model => model.fdbkTo)
        </div>

        <p>
            <input type="submit" value="Post" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
