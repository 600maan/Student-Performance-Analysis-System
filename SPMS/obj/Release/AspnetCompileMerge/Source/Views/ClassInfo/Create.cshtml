            subClass.Add(new SelectListItem { Text = "8", Value = "8" });
            subClass.Add(new SelectListItem { Text = "9", Value = "9" });
            subClass.Add(new SelectListItem { Text = "10", Value = "10" });
            }

           @Html.DropDownListFor(model=>model.ClassName,new SelectList(subClass, "Value", "Text", "Select one"))
        
